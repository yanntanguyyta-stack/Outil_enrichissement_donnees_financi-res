# Streamlit Secrets — Template
# Copiez ce fichier en .streamlit/secrets.toml et remplissez vos valeurs
# ⚠️  Ne JAMAIS committer secrets.toml dans Git

# ── Authentification Google OAuth2 ──
GOOGLE_CLIENT_ID = ""
GOOGLE_CLIENT_SECRET = ""
OAUTH_REDIRECT_URI = "https://votre-app.streamlit.app"
AUTH_SECRET_KEY = "REMPLACEZ-PAR-UNE-CHAINE-ALEATOIRE-DE-32-CARACTERES-MINIMUM"

# ── Autorisation ──
# Option 1 : whitelist emails (séparés par virgules)
ALLOWED_EMAILS = "alice@monentreprise.com,bob@monentreprise.com"

# Option 2 : Google Groups (nécessite le compte de service ci-dessous)
ALLOWED_GOOGLE_GROUPS = "equipe-data@monentreprise.com"

# ── Google Directory API (pour la vérification des groupes) ──
# Collez ici le contenu JSON du compte de service (sur une seule ligne)
GOOGLE_SERVICE_ACCOUNT_JSON = ""
GOOGLE_ADMIN_EMAIL = "admin@monentreprise.com"

# ── Base RNE ──
RNE_DB_PATH = "rne_finances.db"

# ── Paramètres API DINUM ──
DINUM_API_DELAY_SECONDS = "0.8"
DINUM_API_MAX_DELAY_SECONDS = "8"
DINUM_IMPORT_MAX_COMPANIES = "1500"
